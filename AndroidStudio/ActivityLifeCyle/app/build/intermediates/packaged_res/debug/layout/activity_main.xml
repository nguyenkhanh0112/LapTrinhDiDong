<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editTextFistNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nhập một số "
        android:textSize="25dp"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextFistNumber"
        android:textSize="25dp"
        android:text="+" />
    <EditText
        android:id="@+id/editTextSecondNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:ems="10"
        android:textSize="25dp"
        android:hint="Nhập một số"
        android:inputType="number"/>
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextSecondNumber"
        android:textSize="25dp"
        android:text="=" />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:textSize="25dp"
        android:text="0" />
    <Button
        android:id="@+id/btnTinhTong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:text="Cộng"
        android:background="@color/design_default_color_primary_dark"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnTinhTong"
        android:id="@+id/btn_Tru"
        android:text="Trừ"
        android:background="@color/design_default_color_primary_dark"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_Tich"
        android:layout_below="@+id/btnTinhTong"
        android:text="Nhân"
        android:layout_toRightOf="@+id/btn_Tru"
        android:background="@color/design_default_color_primary_dark"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_Thuong"
        android:layout_below="@+id/btnTinhTong"
        android:text="Chia"
        android:layout_toRightOf="@+id/btn_Tich"
        android:background="@color/design_default_color_primary_dark"/>
</RelativeLayout>