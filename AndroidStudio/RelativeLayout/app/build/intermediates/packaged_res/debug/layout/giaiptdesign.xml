<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
            android:src="@drawable/demonslayer"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Giải PT "
        android:textSize="50dp"
        android:id="@+id/titleGiaipt"
        android:textStyle="bold|normal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleGiaipt"
        android:text="Nhập hệ số A:"
        android:id="@+id/nhapA"
        android:textSize="30dp"/>
    <EditText
        android:id="@+id/hesoa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleGiaipt"
        android:layout_toRightOf="@+id/nhapA"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nhapA"
        android:text="Nhập hệ số B:"
        android:id="@+id/nhapB"
        android:textSize="30dp"/>
    <EditText
        android:id="@+id/hesob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nhapA"
        android:layout_toRightOf="@+id/nhapB"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nhapB"
        android:text="Nhập hệ số C:"
        android:id="@+id/nhapC"
        android:textSize="30dp"/>

    <EditText
        android:id="@+id/hesoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nhapB"
        android:layout_toRightOf="@+id/nhapC" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giải PT"
        android:layout_below="@id/nhapC"
        android:textSize="30dp"
        android:id="@+id/btnGiaiPT"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnGiaiPT"
        android:textSize="30dp"
        android:text="Kết Quả: "
        android:textStyle="bold"
        android:id="@+id/kq"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnGiaiPT"
        android:layout_toRightOf="@+id/kq"/>
</RelativeLayout>