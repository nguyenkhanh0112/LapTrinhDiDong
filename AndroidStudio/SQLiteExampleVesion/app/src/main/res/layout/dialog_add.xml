<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00F7FF"
    android:padding="10dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:id="@+id/themCv"
        android:text="Thêm công việc"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#ff00"/>
    <EditText
        android:hint="Tên Công Việc"
        android:layout_marginTop="10dp"
        android:textSize="24sp"
        android:id="@+id/textTen"
        android:layout_width="match_parent"
        android:layout_below="@+id/themCv"
        android:layout_height="wrap_content"/>
    <Button
        android:textSize="24sp"
        android:id="@+id/btn_Them"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTen"
        android:layout_marginTop="10dp"
        android:text="Thêm"
        android:layout_marginLeft="30dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTen"
        android:textSize="24sp"
        android:id="@+id/btn_huy"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/btn_Them"
        android:layout_marginLeft="30dp"
        android:text="Hủy"/>

</RelativeLayout>