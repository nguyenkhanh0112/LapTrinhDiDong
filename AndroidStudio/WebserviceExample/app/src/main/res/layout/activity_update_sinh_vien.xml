<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent"
    android:background="#BCAAA4"
    android:orientation="vertical"
    tools:context=".updateSinhVien">
    <TextView
        android:textColor="#D50000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm Sinh Viên"
        android:gravity="center"
        android:textSize="36sp"
        android:textStyle="bold"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_hoten1"
        android:hint="Nhập họ tên"
        android:layout_marginTop="10dp"
        android:textSize="24sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_namsinh1"
        android:hint="Nhập năm sinh"
        android:layout_marginTop="10dp"
        android:textSize="24sp"/>

    <EditText
        android:id="@+id/edit_diachi1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Nhập địa chỉ"
        android:textSize="24sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCapNhap"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:textSize="24sp"
            android:text="Cập Nhập"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:id="@+id/btnHuy1"
            android:text="Hủy"
            android:textSize="24sp"/>
    </LinearLayout>
</LinearLayout>